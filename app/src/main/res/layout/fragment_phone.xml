<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PhoneFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/groTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zihuatanejo_gro"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_category"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groTextView"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_all"
        android:textSize="15sp"
        android:textColor="@color/orangeColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/category"
        app:layout_constraintTop_toBottomOf="@id/groTextView"
        android:layout_marginTop="26dp"
        android:layout_marginStart="120dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="6dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/buttonFirst"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/screen"
                android:src="@drawable/group" />

            <ImageButton
                android:id="@+id/buttonSecond"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/screen"
                style="@style/White.Button"
                android:src="@drawable/computer"/>

            <ImageButton
                android:id="@+id/buttonThird"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="12dp"
                style="@style/White.Button"
                android:src="@drawable/health"
                android:background="@drawable/screen"/>

            <ImageButton
                android:id="@+id/buttonFourth"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="12dp"
                style="@style/White.Button"
                android:src="@drawable/book"
                android:background="@drawable/screen"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phones"
                android:textSize="12sp"
                android:textColor="@color/orangeColor"
                android:layout_marginHorizontal="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer"
                android:textSize="12sp"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textSize="12sp"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"
                android:textSize="12sp"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="30dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/search"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="16dp"
        android:hint="Search"
        android:paddingStart="12dp"
        android:background="@drawable/editbackgraund"
        app:layout_constraintEnd_toStartOf="@id/qrCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerL"/>

    <ImageButton
        android:id="@+id/qrCode"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/screen"
        android:src="@drawable/ic_qr_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search"
        app:layout_constraintTop_toBottomOf="@id/containerL" />

    <TextView
        android:id="@+id/sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot sales"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="24dp"
        android:layout_marginStart="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see more"
        android:textColor="@color/orangeColor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="12dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="384dp"
        android:layout_height="182dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sales"
        android:layout_marginTop="8dp"
        android:background="@drawable/iphone">

        <ImageView
            android:id="@+id/imageReclam"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/iphone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sales" />

        <ImageButton
            android:id="@+id/imageNew"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/screen"
            android:layout_marginStart="32dp"
            android:layout_marginTop="23dp"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="36dp"
            android:text="New"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="109dp"
            android:layout_height="30dp"
            android:text="Iphone12"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginStart="32dp"
            android:layout_marginTop="68dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:text="Super.Mega.Rapido."
            android:layout_marginTop="103dp"
            android:layout_marginStart="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="98dp"
            android:layout_height="32dp"
            android:layout_marginTop="136dp"
            android:layout_marginStart="32dp"
            android:text="Buy now!"
            android:textSize="9sp"
            android:textColor="@color/black"
            android:background="@drawable/editbackgraund"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/bestSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:textSize="25sp"
        android:textColor="@color/textColor"
        android:text="Best Sellet"
        android:layout_marginStart="17dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="170dp"
        android:text="see more"
        android:textColor="@color/orangeColor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bestSeller"
        app:layout_constraintTop_toBottomOf="@id/imageReclam"
        tools:layout_editor_absoluteY="566dp"
        tools:ignore="NotSibling" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recicleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bestSeller"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>